<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2d2d2d"
    tools:context="com.example.noobtube.memorygame.SettingsActivity">

    <TextView
        android:text="SETTINGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsTitle"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:fontFamily="serif"
        android:textColor="#FFFFFF"
         />

    <TextView
        android:text="Hello user! please note: As per twitters rules and guidlines you can not post the same thing twice!
        for example, you scored 20 clicks and posted it and then played the game again and scored the same score, twitter won't allow it to be posted."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="#FFFFFF"
        android:layout_margin="15dp"
        android:layout_column="0"
        android:layout_row="1"
        android:id="@+id/twitterRules" />

    <Button
        android:text="Change Background Sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeBackground"
        android:layout_margin="15dp"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart" />

    <Button
        android:text="Change Background Original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="28sp"
        android:id="@+id/buttonOriginal"
        android:textStyle="normal|bold" />
</GridLayout>
